<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MyContestsActivity">

    <!--Horicontally Scrollable Table-->
    <ScrollView
        android:id="@+id/layout"
        android:layout_height="600dp"
        android:scrollbars="horizontal|vertical"
        android:layout_width="match_parent"
        android:layout_marginTop="5dip"
        android:scrollbarStyle="outsideInset"
        android:fillViewport="true">

        <HorizontalScrollView
            android:id="@+id/horizontalView"
            android:layout_height="wrap_content"
            android:scrollbars="horizontal|vertical"
            android:layout_width="wrap_content"
            android:layout_marginTop="5dip">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="600dp"
                android:id="@+id/tlGridTable" >
                <TableLayout
                    android:id="@+id/tableLayout1"
                    android:layout_width="match_parent"
                    android:layout_height="600dp"
                    android:padding="10dp"
                    android:isScrollContainer="true">
                    <TableRow
                        android:background="#ffffff"
                        android:gravity="center"

                        >
                        <TextView
                            android:textSize="20dp"
                            android:textColor="#000000"
                            android:background="#ffffff"

                            android:layout_margin="10dp"
                            android:text="Match"

                            />
                        <TextView
                            android:textSize="20dp"
                            android:textColor="#000000"
                            android:background="#ffffff"
                            android:layout_margin="10dp"
                            android:text="Date"
                            />
                        <TextView
                            android:textSize="20dp"
                            android:textColor="#000000"
                            android:background="#ffffff"
                            android:layout_margin="10dp"
                            android:text="Time"
                            />
                        <TextView
                            android:textSize="20dp"
                            android:textColor="#000000"
                            android:background="#ffffff"
                            android:layout_margin="10dp"
                            android:text="Link"
                            />

                    </TableRow>

                    <TableRow
                        android:background="#000000"
                        android:gravity="center"

                        >
                        <TextView
                            android:textSize="20dp"
                            android:textColor="#ffffff"
                            android:background="#000000"
                            android:layout_margin="10dp"
                            android:text="Match1"
                            />
                        <TextView
                            android:textSize="20dp"
                            android:textColor="#ffffff"
                            android:background="#000000"
                            android:layout_margin="10dp"
                            android:text="22/09/2020"
                            />
                        <TextView
                            android:textSize="20dp"
                            android:textColor="#ffffff"
                            android:background="#000000"
                            android:layout_margin="10dp"
                            android:text="20:00"
                            />
                        <TextView
                            android:textSize="20dp"
                            android:textColor="#ffffff"
                            android:background="#000000"
                            android:layout_margin="10dp"
                            android:text="dummy link"
                            />

                    </TableRow>


                </TableLayout>
            </TableLayout>
        </HorizontalScrollView>
    </ScrollView>

    <!--Horizontally Scrollable Table-->




    <!--Bottom Buttons COntaining Linear Layout-->
    <LinearLayout
        android:layout_marginTop="30dp"
        android:background="#000000"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/myContestButton"
            android:layout_margin="1dp"
            android:background="#FF22"
            android:textSize="10dp"
            android:textAllCaps="false"
            android:text="My Contests"
            android:layout_width="80dp"
            android:layout_height="80dp"/>
        <Button
            android:id="@+id/genTVButton"
            android:layout_margin="1dp"
            android:background="#FFFFFF"
            android:textSize="10dp"
            android:textAllCaps="false"
            android:text="Gen TV"
            android:layout_width="80dp"
            android:layout_height="80dp"/>
        <Button
            android:id="@+id/ggTrendsButton"
            android:layout_margin="1dp"
            android:background="#FFFFFF"
            android:textSize="10dp"
            android:textAllCaps="false"
            android:text="GG Trends"
            android:layout_width="80dp"
            android:layout_height="80dp"/>
        <Button
            android:id="@+id/genStoreButton"
            android:layout_margin="1dp"
            android:background="#FFFFFF"
            android:textSize="10dp"
            android:textAllCaps="false"
            android:text="Gen Store"
            android:layout_width="80dp"
            android:layout_height="80dp"/>
        <Button
            android:id="@+id/profileButton"
            android:layout_margin="1dp"
            android:background="#FFFFFF"
            android:textSize="10dp"
            android:textAllCaps="false"
            android:text="Profile"
            android:layout_width="80dp"
            android:layout_height="80dp"/>

    </LinearLayout>

</LinearLayout>