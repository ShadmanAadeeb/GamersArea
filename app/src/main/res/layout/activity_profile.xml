<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ProfileActivity">

    <!--LAyout for pro pic and user name-->
    <LinearLayout
        android:orientation="vertical"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:src="@drawable/propicicon"
            android:id="@+id/profilePicImageView"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/userNameTextView"
            android:text="USER NAME"
            android:textColor="#000000"
            android:textSize="20dp"
            />
    </LinearLayout>
    <!--LAyout for two buttons-->
    <LinearLayout
        android:padding="5dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="30dp"
            android:layout_margin="4dp"
            android:text="Balance"
            android:textAlignment="center"
            android:id="@+id/balanceTextView"
            android:background="#03A9F4"
            android:layout_width="200dp"
            android:layout_height="80dp"
            />
        <TextView
            android:textSize="30dp"
            android:text="Winning"
            android:textAlignment="center"
            android:layout_margin="4dp"
            android:id="@+id/winningTextView"
            android:background="#03A9F4"
            android:layout_width="200dp"
            android:layout_height="80dp"
            />
    </LinearLayout>

    <!--Layout for first 3 profile buttons-->
    <LinearLayout
        android:padding="10dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageButton
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:textSize="30dp"
                android:layout_margin="4dp"
                android:src="@drawable/mypromoicon"
                android:textAlignment="center"
                android:id="@+id/myPromoImageButton"
                android:background="#03A9F4"
                android:layout_width="100dp"
                android:layout_height="100dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:textColor="#000000"
                android:text="My Promo"
                />
        </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageButton
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:textSize="30dp"
                android:src="@drawable/staticon"
                android:textAlignment="center"
                android:layout_margin="4dp"
                android:id="@+id/myStatImageButton"
                android:background="#FFFFFF"
                android:layout_width="100dp"
                android:layout_height="100dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:textColor="#000000"
                android:text="My Stat"
                />
        </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageButton
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:textSize="30dp"
                android:src="@drawable/dollaricon"
                android:textAlignment="center"
                android:layout_margin="4dp"
                android:id="@+id/myWalletImageButton"
                android:background="#FFFFFF"
                android:layout_width="100dp"
                android:layout_height="100dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:textColor="#000000"
                android:text="My Wallet"
                />
        </LinearLayout>

    </LinearLayout>



    <!--Layout for last 2  profile buttons-->
    <LinearLayout
        android:padding="10dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageButton
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:textSize="30dp"
                android:layout_margin="4dp"
                android:src="@drawable/supporticon"
                android:textAlignment="center"
                android:id="@+id/supportImageButton"
                android:background="#FFFFFF"
                android:layout_width="100dp"
                android:layout_height="100dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:textColor="#000000"
                android:text="Support"
                />
        </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageButton
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:textSize="30dp"
                android:src="@drawable/logouticon"
                android:textAlignment="center"
                android:layout_margin="4dp"
                android:id="@+id/logOutImageButton"
                android:background="#FFFFFF"
                android:layout_width="100dp"
                android:layout_height="100dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:textColor="#000000"
                android:text="Log Out"
                />
        </LinearLayout>



    </LinearLayout>



    <!--Bottom Buttons COntaining Linear Layout-->
    <LinearLayout
        android:layout_marginTop="30dp"
        android:background="#000000"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/myContestButton"
            android:layout_margin="1dp"
            android:background="#FFFFFF"
            android:textSize="10dp"
            android:textAllCaps="false"
            android:text="My Contests"
            android:layout_width="80dp"
            android:layout_height="80dp"/>
        <Button
            android:id="@+id/genTVButton"
            android:layout_margin="1dp"
            android:background="#FFFFFF"
            android:textSize="10dp"
            android:textAllCaps="false"
            android:text="Gen TV"
            android:layout_width="80dp"
            android:layout_height="80dp"/>
        <Button
            android:id="@+id/ggTrendsButton"
            android:layout_margin="1dp"
            android:background="#FFFFFF"
            android:textSize="10dp"
            android:textAllCaps="false"
            android:text="GG Trends"
            android:layout_width="80dp"
            android:layout_height="80dp"/>
        <Button
            android:id="@+id/genStoreButton"
            android:layout_margin="1dp"
            android:background="#FFFFFF"
            android:textSize="10dp"
            android:textAllCaps="false"
            android:text="Gen Store"
            android:layout_width="80dp"
            android:layout_height="80dp"/>
        <Button
            android:backgroundTint="#ff22"
            android:id="@+id/profileButton"
            android:layout_margin="1dp"
            android:background="#FFFFFF"
            android:textSize="10dp"
            android:textAllCaps="false"
            android:text="Profile"
            android:layout_width="80dp"
            android:layout_height="80dp"/>

    </LinearLayout>

</LinearLayout>