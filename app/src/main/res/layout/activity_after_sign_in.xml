<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/gamer_skull"
    tools:context=".AfterSignInActivity">
    <!--THis is the main layout with the transparent effect-->
    <LinearLayout
        android:orientation="vertical"
        android:background="#B4FFFFFF"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!--Linea Layout for placing the logo-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:src="@drawable/gamer_skull"
                />
        </LinearLayout>
        <!--Linear Layout for placing the first two buttons-->
        <LinearLayout
            android:layout_margin="5dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="200dp">
            <ImageButton
                android:background="#000000"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:layout_marginRight="60dp"
                android:src="@drawable/pubgiconimage"
                android:id="@+id/pubgButton"
                android:layout_height="120dp"
                android:layout_width="120dp"
                />
            <ImageButton
                android:background="#000000"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:layout_marginLeft="60dp"
                android:src="@drawable/freefireimage"
                android:id="@+id/freeFireButton"
                android:layout_height="120dp"
                android:layout_width="120dp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_margin="5dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="200dp">
            <ImageButton
                android:background="#000000"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:layout_marginRight="60dp"
                android:src="@drawable/chessicon"
                android:id="@+id/chessButton"
                android:layout_height="120dp"
                android:layout_width="120dp"
                />
            <ImageButton
                android:background="#FFFFFF"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:layout_marginLeft="60dp"
                android:src="@drawable/ludoicon"
                android:id="@+id/ludoButton"
                android:layout_height="120dp"
                android:layout_width="120dp"
                />

        </LinearLayout>


        <!--Bottom Buttons COntaining Linear Layout-->
        <LinearLayout
            android:layout_marginTop="30dp"
            android:background="#000000"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/myContestButton"
                android:layout_margin="1dp"
                android:background="#FFFFFF"
                android:textSize="10dp"
                android:textAllCaps="false"
                android:text="My Contests"
                android:layout_width="80dp"
                android:layout_height="80dp"/>
            <Button
                android:id="@+id/genTVButton"
                android:layout_margin="1dp"
                android:background="#FFFFFF"
                android:textSize="10dp"
                android:textAllCaps="false"
                android:text="Gen TV"
                android:layout_width="80dp"
                android:layout_height="80dp"/>
            <Button
                android:id="@+id/ggTrendsButton"
                android:layout_margin="1dp"
                android:background="#FFFFFF"
                android:textSize="10dp"
                android:textAllCaps="false"
                android:text="GG Trends"
                android:layout_width="80dp"
                android:layout_height="80dp"/>
            <Button
                android:id="@+id/genStoreButton"
                android:layout_margin="1dp"
                android:background="#FFFFFF"
                android:textSize="10dp"
                android:textAllCaps="false"
                android:text="Gen Store"
                android:layout_width="80dp"
                android:layout_height="80dp"/>
            <Button
                android:id="@+id/profileButton"
                android:layout_margin="1dp"
                android:background="#FFFFFF"
                android:textSize="10dp"
                android:textAllCaps="false"
                android:text="Profile"
                android:layout_width="80dp"
                android:layout_height="80dp"/>

        </LinearLayout>


    </LinearLayout>

</LinearLayout>